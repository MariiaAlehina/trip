<%= form_for ([:admin, @railway_station]) do |f| %>

  <%= render 'common/errors', resourse: @railway_station %>

  <div class="field">
    <%= f.label :title, "Название станции"%><br>
    <%= f.text_field :title %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit', action: @railway_station.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>
