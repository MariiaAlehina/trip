<h1>Дороги:</h1>

<table>
  <thead>
  <tr>
    <th>Название дорог</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @routes.each do |route| %>
    <tr>
      <td><%= route.title %></td>
      <td><%= link_to t('common.show'), admin_route_path(route) %></td>
      <td><%= link_to t('common.edit'), edit_admin_route_path(route) %></td>
      <td><%= link_to t('common.destroy'), [:admin, route], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новя дорога', new_admin_route_path %>
