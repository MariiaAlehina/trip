<%= form_for([:admin, @train]) do |f| %>
  <%= render 'common/errors', resourse: @train%>

  <div class="field">
    <%= f.label :number, "Номер поезда"%><br>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :current_station, "Текущая стация"%>
    <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :current_route, "Дорога"%>
    <%= f.collection_select :current_route_id, Route.all, :id, :title %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit', action: @train.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>