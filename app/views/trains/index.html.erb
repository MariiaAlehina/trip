<h1>Список возможных поездов</h1>
<p>
  <%= form_tag({:controller => 'trains', :action => 'index'}, :method => 'get') do %>
    <%= label_tag(:q, "Первая станция:") %>
    <%= text_field_tag(:q) %>
  <% end %>
</p>

<p>
  <%= form_tag({:controller => 'trains', :action => 'index'}, :method => 'get') do %>
    <%= label_tag(:p, "Последняя станция:") %>
    <%= text_field_tag(:p) %>
    <%= submit_tag("Search") %>
  <% end %>
</p>
<table>
  <thead>
    <tr>
      <th>Номер поезда</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @trains %>
  </tbody>
</table>