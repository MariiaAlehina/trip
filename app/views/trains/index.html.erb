<p id="notice"><%= notice %></p>

<h1>Listing Trains</h1>
<p>
  <%= form_tag ({:controller => 'trains', :action => 'index'}, :method => 'get') do %>
    <%= label_tag(:title, "Test cur station:") %>
    <%= text_field_tag(:title) %>
    <%= submit_tag("Search") %>
  <% end %>
</p>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @trains %>
  </tbody>
</table>

<br>

<%= link_to 'New Train', new_train_path %>
