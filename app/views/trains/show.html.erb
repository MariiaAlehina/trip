<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>On the station:</strong>
  <% if @train.current_station.present?%>
    <%= @train.current_station.title %>
  <% else %>
    No station
  <% end %>
</p>

<p>
  <strong>The train's route:</strong>
  <% if @train.route.present?%>
    <%= @train.route.title %>
  <% else %>
    The train has no route
  <% end %>
</p>

<p>
  <strong>The train's cars:</strong>
  <% if @train.passenger_cars.present?%>
    <%= @train.passenger_cars.map(&:car_type)%>
    <%= @train.passenger_cars.map(&:quantity_top_seats)%>
    <%= @train.passenger_cars.map(&:quantity_lower_seats)%>
  <% else %>
    The train has no cars
  <% end %>
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
